@model IEnumerable<Student>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

@section Scripts{
    <script src="https://kit.fontawesome.com/0c1924c906.js" crossorigin="anonymous"></script>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3"><i class="bi bi-bookmark-star-fill"></i>&nbsp; Dr Andres Bello University - Faculty of Technology and Innovation </h1>

    <div class="col mb-3">
        <a asp-controller="Student" asp-action="Create" class="btn btn-warning"><i class="bi bi-file-plus-fill"></i>&nbsp; Add Student</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Students Name</th>
                <th scope="col">LastName</th>
                <th scope="col">Address</th>
                <th scope="col">CreatedOn</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.LastName
                    </td>
                    <td width="25%">
                        @item.Address
                    </td>
                    <td width="20%">
                        @item.RecordCreatedOn
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>